{
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Edit(slidev/**/*)",
      "Edit(CLAUDE.md)",
      "Edit(PRD.md)",
      "Bash(pnpm:*)",
      "Bash(cd:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Edit(node_modules/**)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Файл змінено: $file_path'"
          }
        ]
      }
    ]
  }
}
